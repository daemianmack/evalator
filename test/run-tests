#!/usr/bin/env emacs --script

(let ((current-directory (file-name-directory load-file-name)))
  (setq evalator-test-path (expand-file-name "." current-directory))
  (setq evalator-root-path (expand-file-name ".." current-directory)))

(add-to-list 'load-path evalator-root-path)
(add-to-list 'load-path (concat evalator-test-path "/helm/"))
(add-to-list 'load-path evalator-test-path)

(require 'evalator)
(require 'cl)

(dolist (test-file (or argv (directory-files evalator-test-path t "-tests.el$")))
  (load test-file nil t))

;; run tests
(ert-run-tests-batch-and-exit t)
